{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Parameters" : {
    "AppName": {
      "Description": "The name of this app",
      "Type": "String"
    },
    "KeyName" : {
      "Description" : "The EC2 Key Pair to allow SSH access to the instances",
      "Type" : "AWS::EC2::KeyPair::KeyName",
      "ConstraintDescription" : "must be the name of an existing EC2 KeyPair."
    },
    "Scale": {
      "Type": "Number",
      "MinValue": "0",
      "MaxValue": "3",
      "Description": "Number of instances autoscale group"
    },
    "Version": {
      "Description": "Version of the app to deploy",
      "Type": "String",
      "Default": "master"
    },
    "VpcId": {
      "Type": "AWS::EC2::VPC::Id",
      "Description": "The VPC you want to create everything in"
    }
  },

  "Resources" : {

    "AppSecurityGroup" : {
      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
        "GroupDescription": "Shared between all app instances for database access",
        "SecurityGroupIngress": [
            {
              "IpProtocol": "tcp",
              "FromPort": "8443",
              "ToPort": "8443",
              "CidrIp" : "0.0.0.0/0"
            },
            {
              "IpProtocol": "tcp",
              "FromPort": "8080",
              "ToPort": "8080",
              "CidrIp" : "0.0.0.0/0"
            },
            {
              "IpProtocol": "tcp",
              "FromPort": "22",
              "ToPort": "22",
              "CidrIp" : "0.0.0.0/0"
            }
        ],
        "VpcId": { "Ref": "VpcId" }
      }
    },

    "AppScalingGroup" : {
      "Type" : "AWS::AutoScaling::AutoScalingGroup",
      "Properties" : {
        "AvailabilityZones" : { "Fn::GetAZs" : ""},
        "VPCZoneIdentifier" : ["subnet-06d95f62", "subnet-36f2356e", "subnet-4edb6f38"],
        "LaunchConfigurationName" : { "Ref" : "AppLaunchConfig" },
        "DesiredCapacity" : { "Ref": "Scale" },
        "MinSize" : "0",
        "MaxSize" : "3",
        "LoadBalancerNames" : [ { "Ref" : "ElasticLoadBalancer" } ]
      },
      "UpdatePolicy": {
        "AutoScalingRollingUpdate": {
          "MinInstancesInService": { "Ref": "Scale" },
          "MaxBatchSize": "1"
        }
      },
      "CreationPolicy" : {
        "ResourceSignal" : {
          "Timeout" : "PT15M",
          "Count"   : { "Ref": "Scale" }
        }
      }
    },

    "AppLaunchConfig" : {
      "Type" : "AWS::AutoScaling::LaunchConfiguration",
      "Properties" : {
        "KeyName" : { "Ref" : "KeyName" },
        "ImageId" : "ami-f95ef58a",
        "SecurityGroups" : [ { "Fn::GetAtt": ["AppSecurityGroup", "GroupId"] } ],
        "InstanceType" : "t2.nano",
        "UserData"       : { "Fn::Base64" : { "Fn::Join" : ["\n", [
            "#cloud-config",
            "---",
            "write_files:",
            " -   content: |",
            { "Fn::Join" : ["", [
            "         APP_NAME=\"", { "Ref" : "AppName" }, "\"\n",
            "         APP_SCALE=\"", { "Ref" : "Scale" }, "\"\n",
            "         APP_VERSION=\"", { "Ref" : "Version" }, "\"\n"
            ]]},
            "     path: /etc/app.conf",
            "     permissions: '0644'"
        ]]}}
      }
    },

    "ElasticLoadBalancer" : {
      "Type" : "AWS::ElasticLoadBalancing::LoadBalancer",
      "Properties" : {
        "Subnets": ["subnet-06d95f62", "subnet-36f2356e", "subnet-4edb6f38"],
        "CrossZone" : "true",
        "Listeners" : [ {
          "LoadBalancerPort" : "80",
          "InstancePort" : "8080",
          "Protocol" : "HTTP"
        } ],
        "HealthCheck" : {
          "Target" : "TCP:8080",
          "HealthyThreshold" : "3",
          "UnhealthyThreshold" : "5",
          "Interval" : "30",
          "Timeout" : "5"
        }
      }
    }
  },

  "Outputs" : {
  }
}

